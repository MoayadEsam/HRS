@model List<HotelReservation.Core.Models.Attendance>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["MyAttendance"];
    var employee = ViewBag.Employee as HotelReservation.Core.Models.Employee;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock text-primary me-2"></i>@Localizer["MyAttendance"]</h2>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToProfile"]
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Date"]</th>
                                <th>@Localizer["CheckIn"]</th>
                                <th>@Localizer["CheckOut"]</th>
                                <th>@Localizer["Hours"]</th>
                                <th>@Localizer["Status"]</th>
                                <th>@Localizer["Notes"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-calendar me-1 text-muted"></i>
                                        @attendance.Date.ToString("ddd, MMM dd, yyyy")
                                    </td>
                                    <td>
                                        @if (attendance.CheckInTime.HasValue)
                                        {
                                            <span class="text-success">
                                                <i class="fas fa-sign-in-alt me-1"></i>
                                                @attendance.CheckInTime.Value.ToString("hh:mm tt")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (attendance.CheckOutTime.HasValue)
                                        {
                                            <span class="text-danger">
                                                <i class="fas fa-sign-out-alt me-1"></i>
                                                @attendance.CheckOutTime.Value.ToString("hh:mm tt")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (attendance.CheckInTime.HasValue && attendance.CheckOutTime.HasValue)
                                        {
                                            var hours = (attendance.CheckOutTime.Value - attendance.CheckInTime.Value).TotalHours;
                                            <span class="badge bg-info">@hours.ToString("F1") @Localizer["Hours"]</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (attendance.Status)
                                        {
                                            case HotelReservation.Core.Models.AttendanceStatus.Present:
                                                <span class="badge bg-success">@Localizer["Present"]</span>
                                                break;
                                            case HotelReservation.Core.Models.AttendanceStatus.Absent:
                                                <span class="badge bg-danger">@Localizer["Absent"]</span>
                                                break;
                                            case HotelReservation.Core.Models.AttendanceStatus.Late:
                                                <span class="badge bg-warning">@Localizer["Late"]</span>
                                                break;
                                            case HotelReservation.Core.Models.AttendanceStatus.OnLeave:
                                                <span class="badge bg-info">@Localizer["OnLeave"]</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@attendance.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@(attendance.Notes ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["NoAttendanceRecords"]</p>
                </div>
            }
        </div>
    </div>
</div>
