@model IEnumerable<HotelReservation.Core.DTOs.SalaryListDto>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Salaries"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-money-bill-wave me-2"></i>@Localizer["SalaryManagement"]
        </h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#processSalariesModal">
            <i class="fas fa-calculator me-2"></i>@Localizer["ProcessSalaries"]
        </button>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Salaries" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Employee"]</label>
                    <select name="employeeId" class="form-select">
                        <option value="">@Localizer["AllEmployees"]</option>
                        @if (ViewBag.Employees != null)
                        {
                            foreach (var employee in ViewBag.Employees as SelectList)
                            {
                                <option value="@employee.Value" selected="@(employee.Value == ViewBag.SelectedEmployeeId?.ToString())">@employee.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["Month"]</label>
                    <select name="month" class="form-select">
                        <option value="">@Localizer["AllMonths"]</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(ViewBag.SelectedMonth == i)">
                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["Year"]</label>
                    <select name="year" class="form-select">
                        @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                        {
                            <option value="@y" selected="@(ViewBag.SelectedYear == y)">@y</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["Status"]</label>
                    <select name="isPaid" class="form-select">
                        <option value="">@Localizer["All"]</option>
                        <option value="true" selected="@(ViewBag.SelectedIsPaid == true)">@Localizer["Paid"]</option>
                        <option value="false" selected="@(ViewBag.SelectedIsPaid == false)">@Localizer["Pending"]</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>@Localizer["Filter"]
                    </button>
                    <a asp-action="Salaries" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>@Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["TotalSalaries"]</h6>
                            <h3 class="mb-0">@Model.Sum(s => s.GrossAmount).ToString("C")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Paid"]</h6>
                            <h3 class="mb-0">@Model.Where(s => s.IsPaid).Sum(s => s.NetAmount).ToString("C")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Pending"]</h6>
                            <h3 class="mb-0">@Model.Where(s => !s.IsPaid).Sum(s => s.NetAmount).ToString("C")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["TotalRecords"]</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Salaries Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="salariesTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Employee"]</th>
                            <th>@Localizer["Department"]</th>
                            <th>@Localizer["Period"]</th>
                            <th>@Localizer["GrossAmount"]</th>
                            <th>@Localizer["Deductions"]</th>
                            <th>@Localizer["Bonus"]</th>
                            <th>@Localizer["NetAmount"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["PaymentDate"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var salary in Model)
                        {
                            <tr>
                                <td>@salary.EmployeeName</td>
                                <td>@salary.DepartmentName</td>
                                <td>@salary.PayPeriodStart.ToString("MMM yyyy")</td>
                                <td class="text-success">@salary.GrossAmount.ToString("C")</td>
                                <td class="text-danger">-@salary.Deductions.ToString("C")</td>
                                <td class="text-primary">+@salary.Bonus.ToString("C")</td>
                                <td class="fw-bold">@salary.NetAmount.ToString("C")</td>
                                <td>
                                    <span class="badge @(salary.IsPaid ? "bg-success" : "bg-warning")">
                                        @(salary.IsPaid ? Localizer["Paid"] : Localizer["Pending"])
                                    </span>
                                </td>
                                <td>@(salary.PaymentDate?.ToString("d") ?? "-")</td>
                                <td>
                                    @if (!salary.IsPaid)
                                    {
                                        <form asp-action="PaySalary" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@salary.Id" />
                                            <button type="submit" class="btn btn-success btn-sm" title="@Localizer["MarkAsPaid"]">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    }
                                    <a asp-action="EditSalary" asp-route-id="@salary.Id" class="btn btn-primary btn-sm" title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Process Salaries Modal -->
<div class="modal fade" id="processSalariesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ProcessSalaries" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-calculator me-2"></i>@Localizer["ProcessSalaries"]
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">@Localizer["ProcessSalariesDescription"]</p>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Month"] <span class="text-danger">*</span></label>
                            <select name="month" class="form-select" required>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i" selected="@(i == DateTime.Now.Month)">
                                        @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Year"] <span class="text-danger">*</span></label>
                            <select name="year" class="form-select" required>
                                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                                {
                                    <option value="@y" selected="@(y == DateTime.Now.Year)">@y</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        @Localizer["ProcessSalariesWarning"]
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-calculator me-2"></i>@Localizer["Process"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#salariesTable').DataTable({
                order: [[2, 'desc']],
                language: {
                    url: '@Url.Content("~/js/datatables/" + System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName + ".json")'
                }
            });
        });
    </script>
}
