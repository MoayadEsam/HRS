@model IEnumerable<HotelReservation.Core.DTOs.AttendanceListDto>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Attendance"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-clock me-2"></i>@Localizer["AttendanceTracking"]
        </h2>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Attendance" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Employee"]</label>
                    <select name="employeeId" class="form-select">
                        <option value="">@Localizer["AllEmployees"]</option>
                        @if (ViewBag.Employees != null)
                        {
                            foreach (var employee in ViewBag.Employees as SelectList)
                            {
                                <option value="@employee.Value" selected="@(employee.Value == ViewBag.SelectedEmployeeId?.ToString())">@employee.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Department"]</label>
                    <select name="departmentId" class="form-select">
                        <option value="">@Localizer["AllDepartments"]</option>
                        @if (ViewBag.Departments != null)
                        {
                            foreach (var dept in ViewBag.Departments as SelectList)
                            {
                                <option value="@dept.Value" selected="@(dept.Value == ViewBag.SelectedDepartmentId?.ToString())">@dept.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["StartDate"]</label>
                    <input type="date" name="startDate" class="form-control" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["EndDate"]</label>
                    <input type="date" name="endDate" class="form-control" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>@Localizer["Filter"]
                    </button>
                    <a asp-action="Attendance" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Quick Check-In/Check-Out Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="fas fa-user-clock me-2"></i>@Localizer["QuickAttendance"]
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="CheckIn" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-md-8">
                            <select name="employeeId" class="form-select" required>
                                <option value="">@Localizer["SelectEmployee"]</option>
                                @if (ViewBag.ActiveEmployees != null)
                                {
                                    foreach (var employee in ViewBag.ActiveEmployees as SelectList)
                                    {
                                        <option value="@employee.Value">@employee.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>@Localizer["CheckIn"]
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <form asp-action="CheckOut" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-md-8">
                            <select name="employeeId" class="form-select" required>
                                <option value="">@Localizer["SelectEmployee"]</option>
                                @if (ViewBag.CheckedInEmployees != null)
                                {
                                    foreach (var employee in ViewBag.CheckedInEmployees as SelectList)
                                    {
                                        <option value="@employee.Value">@employee.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-sign-out-alt me-2"></i>@Localizer["CheckOut"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Present"]</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Status == "Present")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Late"]</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Status == "Late")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-user-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Absent"]</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Status == "Absent")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-user-times fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["TotalHours"]</h6>
                            <h3 class="mb-0">@Model.Sum(a => a.TotalHours).ToString("F1")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-hourglass-half fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="attendanceTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Employee"]</th>
                            <th>@Localizer["Department"]</th>
                            <th>@Localizer["CheckIn"]</th>
                            <th>@Localizer["CheckOut"]</th>
                            <th>@Localizer["TotalHours"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["Notes"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attendance in Model)
                        {
                            <tr>
                                <td>@attendance.Date.ToString("d")</td>
                                <td>@attendance.EmployeeName</td>
                                <td>@attendance.DepartmentName</td>
                                <td>
                                    @if (attendance.CheckIn.HasValue)
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-sign-in-alt me-1"></i>@attendance.CheckIn.Value.ToString("HH:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (attendance.CheckOut.HasValue)
                                    {
                                        <span class="text-danger">
                                            <i class="fas fa-sign-out-alt me-1"></i>@attendance.CheckOut.Value.ToString("HH:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (attendance.TotalHours > 0)
                                    {
                                        <span class="fw-bold">@attendance.TotalHours.ToString("F1") @Localizer["Hours"]</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusClass = attendance.Status switch
                                        {
                                            "Present" => "bg-success",
                                            "Late" => "bg-warning",
                                            "Absent" => "bg-danger",
                                            "OnLeave" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@Localizer[attendance.Status]</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(attendance.Notes))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@attendance.Notes">
                                            @attendance.Notes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#attendanceTable').DataTable({
                order: [[0, 'desc']],
                language: {
                    url: '@Url.Content("~/js/datatables/" + System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName + ".json")'
                }
            });
        });
    </script>
}
