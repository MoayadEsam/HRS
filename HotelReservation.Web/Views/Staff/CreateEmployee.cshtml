@model HotelReservation.Core.DTOs.EmployeeCreateDto
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["AddEmployee"];
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>@Localizer["AddEmployee"]
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateEmployee" method="post">
                        @Html.AntiForgeryToken()

                        <h6 class="text-muted mb-3">@Localizer["PersonalInformation"]</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">@Localizer["FirstName"] <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">@Localizer["LastName"] <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">@Localizer["Email"] <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">@Localizer["Phone"]</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label">@Localizer["DateOfBirth"] <span class="text-danger">*</span></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label">@Localizer["Address"]</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h6 class="text-muted mb-3">@Localizer["EmploymentDetails"]</h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Position" class="form-label">@Localizer["Position"] <span class="text-danger">*</span></label>
                                <input asp-for="Position" class="form-control" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartmentId" class="form-label">@Localizer["Department"] <span class="text-danger">*</span></label>
                                <select asp-for="DepartmentId" asp-items="ViewBag.Departments as SelectList" class="form-select">
                                    <option value="">@Localizer["SelectDepartment"]</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HireDate" class="form-label">@Localizer["HireDate"] <span class="text-danger">*</span></label>
                                <input asp-for="HireDate" class="form-control" type="date" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BaseSalary" class="form-label">@Localizer["BaseSalary"] <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="BaseSalary" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="BaseSalary" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h6 class="text-muted mb-3">@Localizer["EmergencyContact"]</h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmergencyContact" class="form-label">@Localizer["ContactName"]</label>
                                <input asp-for="EmergencyContact" class="form-control" />
                                <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmergencyPhone" class="form-label">@Localizer["ContactPhone"]</label>
                                <input asp-for="EmergencyPhone" class="form-control" />
                                <span asp-validation-for="EmergencyPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">@Localizer["Notes"]</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Employees" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
