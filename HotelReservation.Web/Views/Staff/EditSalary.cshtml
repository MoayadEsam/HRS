@model HotelReservation.Core.DTOs.SalaryUpdateDto
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["EditSalary"];
    var salaryDetails = ViewBag.SalaryDetails as HotelReservation.Core.DTOs.SalaryListDto;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>@Localizer["EditSalary"]
                    </h4>
                </div>
                <div class="card-body">
                    @if (salaryDetails != null)
                    {
                        <div class="alert alert-info mb-4">
                            <h6 class="mb-2">
                                <i class="fas fa-user me-2"></i>@salaryDetails.EmployeeName
                            </h6>
                            <p class="mb-1">
                                <strong>@Localizer["Period"]:</strong> @salaryDetails.PayPeriodStart.ToString("MMMM yyyy")
                            </p>
                            <p class="mb-0">
                                <strong>@Localizer["BaseSalary"]:</strong> @salaryDetails.BaseSalary.ToString("C")
                            </p>
                        </div>
                    }

                    <form asp-action="EditSalary" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="EmployeeId" />
                        <input type="hidden" asp-for="Month" />
                        <input type="hidden" asp-for="Year" />

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Bonus" class="form-label">@Localizer["Bonus"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Bonus" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Bonus" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Deductions" class="form-label">@Localizer["Deductions"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Deductions" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Deductions" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Overtime" class="form-label">@Localizer["Overtime"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Overtime" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="Overtime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">@Localizer["Notes"]</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Salaries" asp-route-month="@Model.Month" asp-route-year="@Model.Year" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
