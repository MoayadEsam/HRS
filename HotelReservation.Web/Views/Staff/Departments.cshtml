@model IEnumerable<HotelReservation.Core.DTOs.DepartmentListDto>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Departments"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-building me-2 text-primary"></i>@Localizer["Departments"]
        </h2>
        <a asp-action="CreateDepartment" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>@Localizer["AddDepartment"]
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["Description"]</th>
                            <th class="text-center">@Localizer["Employees"]</th>
                            <th class="text-center">@Localizer["Status"]</th>
                            <th class="text-end">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@dept.Name</strong>
                                </td>
                                <td>@(dept.Description ?? "-")</td>
                                <td class="text-center">
                                    <span class="badge bg-info">@dept.EmployeeCount</span>
                                </td>
                                <td class="text-center">
                                    @if (dept.IsActive)
                                    {
                                        <span class="badge bg-success">@Localizer["Active"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Employees" asp-route-departmentId="@dept.Id" class="btn btn-sm btn-outline-info" title="@Localizer["ViewEmployees"]">
                                        <i class="fas fa-users"></i>
                                    </a>
                                    <a asp-action="EditDepartment" asp-route-id="@dept.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (dept.EmployeeCount == 0)
                                    {
                                        <form asp-action="DeleteDepartment" asp-route-id="@dept.Id" method="post" class="d-inline" onsubmit="return confirm('@Localizer["ConfirmDelete"]');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["NoDepartmentsFound"]</p>
                    <a asp-action="CreateDepartment" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>@Localizer["AddDepartment"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>
