@model HotelReservation.Core.DTOs.StaffAccountCreateDto
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["CreateStaffAccount"];
    var employee = ViewBag.Employee as HotelReservation.Core.Models.Employee;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>@Localizer["CreateStaffAccount"]</h4>
                </div>
                <div class="card-body">
                    @if (employee != null)
                    {
                        <!-- Employee Info -->
                        <div class="alert alert-info mb-4">
                            <h5 class="alert-heading"><i class="fas fa-user me-2"></i>@Localizer["EmployeeInfo"]</h5>
                            <hr>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">@Localizer["Name"]</dt>
                                <dd class="col-sm-8">@employee.FullName</dd>
                                
                                <dt class="col-sm-4">@Localizer["Email"]</dt>
                                <dd class="col-sm-8">@employee.Email</dd>
                                
                                <dt class="col-sm-4">@Localizer["Department"]</dt>
                                <dd class="col-sm-8">@employee.Department?.Name</dd>
                                
                                <dt class="col-sm-4">@Localizer["Position"]</dt>
                                <dd class="col-sm-8">@employee.Position</dd>
                            </dl>
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <form asp-action="CreateStaffAccount" method="post">
                        <input type="hidden" asp-for="EmployeeId" />
                        
                        <div class="mb-3">
                            <label class="form-label">@Localizer["Username"]</label>
                            <input type="text" class="form-control" value="@employee?.Email" disabled />
                            <small class="text-muted">@Localizer["UsernameIsEmail"]</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" id="password" />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">@Localizer["PasswordRequirements"]</small>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">@Localizer["ConfirmPassword"]</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle me-2"></i>
                            @Localizer["StaffAccountNote"]
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus me-2"></i>@Localizer["CreateAccount"]
                            </button>
                            <a asp-action="EmployeeDetails" asp-route-id="@Model.EmployeeId" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>@Localizer["Cancel"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}
