@model IEnumerable<HotelReservation.Core.DTOs.EmployeeListDto>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Employees"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-users me-2 text-primary"></i>@Localizer["Employees"]
        </h2>
        <a asp-action="CreateEmployee" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>@Localizer["AddEmployee"]
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">@Localizer["FilterByDepartment"]</label>
                    <select name="departmentId" asp-items="ViewBag.Departments as SelectList" class="form-select">
                        <option value="">@Localizer["AllDepartments"]</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-2"></i>@Localizer["Filter"]
                    </button>
                    <a asp-action="Employees" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>@Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Employee"]</th>
                            <th>@Localizer["Position"]</th>
                            <th>@Localizer["Department"]</th>
                            <th>@Localizer["Contact"]</th>
                            <th class="text-end">@Localizer["Salary"]</th>
                            <th class="text-center">@Localizer["Status"]</th>
                            <th class="text-end">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3">
                                            @emp.FullName[0]
                                        </div>
                                        <div>
                                            <strong>@emp.FullName</strong>
                                            <br />
                                            <small class="text-muted">@Localizer["HiredOn"]: @emp.HireDate.ToString("dd MMM yyyy")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@emp.Position</td>
                                <td>
                                    <span class="badge bg-info">@emp.DepartmentName</span>
                                </td>
                                <td>
                                    <small>
                                        <i class="fas fa-envelope me-1"></i>@emp.Email<br />
                                        @if (!string.IsNullOrEmpty(emp.Phone))
                                        {
                                            <i class="fas fa-phone me-1"></i>@emp.Phone
                                        }
                                    </small>
                                </td>
                                <td class="text-end">
                                    <strong>$@emp.BaseSalary.ToString("N2")</strong>
                                </td>
                                <td class="text-center">
                                    @if (emp.IsActive)
                                    {
                                        <span class="badge bg-success">@Localizer["Active"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Localizer["Terminated"]</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="EmployeeDetails" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-info" title="@Localizer["ViewDetails"]">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="EmployeeAttendance" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-secondary" title="@Localizer["Attendance"]">
                                        <i class="fas fa-calendar-check"></i>
                                    </a>
                                    <a asp-action="EditEmployee" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (emp.IsActive)
                                    {
                                        <form asp-action="TerminateEmployee" asp-route-id="@emp.Id" method="post" class="d-inline" onsubmit="return confirm('@Localizer["ConfirmTerminate"]');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="@Localizer["Terminate"]">
                                                <i class="fas fa-user-slash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["NoEmployeesFound"]</p>
                    <a asp-action="CreateEmployee" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>@Localizer["AddEmployee"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #6c757d;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }
</style>
