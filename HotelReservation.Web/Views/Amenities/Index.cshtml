@model IEnumerable<HotelReservation.Core.DTOs.AmenityListDto>
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ManageAmenities"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-concierge-bell"></i> @Localizer["ManageAmenities"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> @Localizer["AddNewAmenity"]
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var amenity in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            @Localizer[amenity.Name]
                            @if (!amenity.IsActive)
                            {
                                <span class="badge bg-danger float-end">@Localizer["Inactive"]</span>
                            }
                            else
                            {
                                <span class="badge bg-success float-end">@Localizer["Active"]</span>
                            }
                        </h5>
                        @if (!string.IsNullOrEmpty(amenity.Description))
                        {
                            <p class="card-text">@amenity.Description</p>
                        }
                        @if (!string.IsNullOrEmpty(amenity.IconClass))
                        {
                            <p class="card-text"><i class="@amenity.IconClass"></i> @amenity.IconClass</p>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@amenity.Id" class="btn btn-outline-warning">
                                <i class="fas fa-edit"></i> @Localizer["Edit"]
                            </a>
                            <a asp-action="Delete" asp-route-id="@amenity.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i> @Localizer["Delete"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> @Localizer["NoAmenitiesFound"]
    </div>
}
