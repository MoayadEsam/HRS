@model IEnumerable<HotelReservation.Core.DTOs.InventoryTransactionListDto>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["InventoryTransactions"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-history me-2"></i>@Localizer["TransactionHistory"]
        </h2>
        <a asp-action="Items" class="btn btn-outline-primary">
            <i class="fas fa-boxes me-2"></i>@Localizer["BackToItems"]
        </a>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Transactions" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Item"]</label>
                    <select name="itemId" class="form-select">
                        <option value="">@Localizer["AllItems"]</option>
                        @if (ViewBag.Items != null)
                        {
                            foreach (var item in ViewBag.Items as SelectList)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewBag.SelectedItemId?.ToString())">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["Type"]</label>
                    <select name="transactionType" class="form-select">
                        <option value="">@Localizer["All"]</option>
                        <option value="In" selected="@(ViewBag.TransactionType == "In")">@Localizer["StockIn"]</option>
                        <option value="Out" selected="@(ViewBag.TransactionType == "Out")">@Localizer["StockOut"]</option>
                        <option value="Adjustment" selected="@(ViewBag.TransactionType == "Adjustment")">@Localizer["Adjustment"]</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["StartDate"]</label>
                    <input type="date" name="startDate" class="form-control" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["EndDate"]</label>
                    <input type="date" name="endDate" class="form-control" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>@Localizer["Filter"]
                    </button>
                    <a asp-action="Transactions" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>@Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["StockIn"]</h6>
                            <h3 class="mb-0">@Model.Where(t => t.TransactionType == "In").Sum(t => t.Quantity)</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-arrow-down fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["StockOut"]</h6>
                            <h3 class="mb-0">@Model.Where(t => t.TransactionType == "Out").Sum(t => t.Quantity)</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-arrow-up fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Adjustments"]</h6>
                            <h3 class="mb-0">@Model.Count(t => t.TransactionType == "Adjustment")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-sliders-h fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["TotalTransactions"]</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-exchange-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="transactionsTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Item"]</th>
                            <th>@Localizer["Category"]</th>
                            <th>@Localizer["Type"]</th>
                            <th>@Localizer["Quantity"]</th>
                            <th>@Localizer["UnitPrice"]</th>
                            <th>@Localizer["TotalPrice"]</th>
                            <th>@Localizer["PerformedBy"]</th>
                            <th>@Localizer["Notes"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            var typeClass = transaction.TransactionType switch
                            {
                                "In" => "bg-success",
                                "Out" => "bg-danger",
                                "Adjustment" => "bg-warning",
                                _ => "bg-secondary"
                            };
                            var typeIcon = transaction.TransactionType switch
                            {
                                "In" => "fa-arrow-down",
                                "Out" => "fa-arrow-up",
                                "Adjustment" => "fa-sliders-h",
                                _ => "fa-exchange-alt"
                            };
                            <tr>
                                <td>@transaction.TransactionDate.ToString("g")</td>
                                <td class="fw-bold">@transaction.ItemName</td>
                                <td><span class="badge bg-secondary">@transaction.CategoryName</span></td>
                                <td>
                                    <span class="badge @typeClass">
                                        <i class="fas @typeIcon me-1"></i>@Localizer[transaction.TransactionType]
                                    </span>
                                </td>
                                <td class="@(transaction.TransactionType == "In" ? "text-success" : transaction.TransactionType == "Out" ? "text-danger" : "") fw-bold">
                                    @(transaction.TransactionType == "In" ? "+" : transaction.TransactionType == "Out" ? "-" : "")@transaction.Quantity
                                </td>
                                <td>@transaction.UnitPrice.ToString("C")</td>
                                <td>@transaction.TotalPrice.ToString("C")</td>
                                <td>@(transaction.CreatedByName ?? "-")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(transaction.Notes))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@transaction.Notes">
                                            @transaction.Notes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                order: [[0, 'desc']],
                language: {
                    url: '@Url.Content("~/js/datatables/" + System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName + ".json")'
                }
            });
        });
    </script>
}
