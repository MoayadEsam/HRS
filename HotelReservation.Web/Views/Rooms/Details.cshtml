@model HotelReservation.Core.DTOs.RoomDetailsDto
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["RoomDetails"];
}

<div class="page-header text-center mb-5">
    <h1 class="display-5 mb-3"><i class="fas fa-door-open me-3 text-accent"></i>@Localizer["Room"] @Model.RoomNumber</h1>
    <p class="lead text-muted">@Model.HotelName</p>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="detail-card">
            <div class="detail-card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-bed me-2"></i>@Localizer[Model.TypeName] @Localizer["Room"]
                </h3>
                @if (Model.IsAvailable)
                {
                    <span class="status-badge status-available">
                        <i class="fas fa-check-circle"></i> @Localizer["Available"]
                    </span>
                }
                else
                {
                    <span class="status-badge status-booked">
                        <i class="fas fa-times-circle"></i> @Localizer["Booked"]
                    </span>
                }
            </div>
            <div class="detail-card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">@Localizer["Capacity"]</small>
                                <strong>@Model.Capacity @Localizer["Guests"]</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-layer-group"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">@Localizer["Floor"]</small>
                                <strong>@Localizer["Floor"] @Model.FloorNumber</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center p-4 rounded-3" style="background: linear-gradient(135deg, rgba(212, 175, 55, 0.1), rgba(212, 175, 55, 0.05));">
                            <small class="text-muted d-block mb-2">@Localizer["PricePerNight"]</small>
                            <div class="price-display">$@Model.PricePerNight<small>/@Localizer["Night"]</small></div>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <h5 class="mb-3"><i class="fas fa-info-circle me-2 text-accent"></i>@Localizer["Description"]</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }
                
                @if (Model.Amenities != null && Model.Amenities.Any())
                {
                    <div>
                        <h5 class="mb-3"><i class="fas fa-concierge-bell me-2 text-accent"></i>@Localizer["Amenities"]</h5>
                        <div class="d-flex flex-wrap">
                            @foreach (var amenity in Model.Amenities)
                            {
                                <span class="amenity-tag">
                                    <i class="fas fa-check text-accent"></i>
                                    @amenity.Name
                                </span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        @if (Model.IsAvailable && (User.Identity?.IsAuthenticated ?? false))
        {
            <div class="action-card mb-4" style="background: linear-gradient(135deg, #dcfce7, #bbf7d0); border-color: #22c55e;">
                <div class="text-center">
                    <i class="fas fa-calendar-check fa-2x text-success mb-3"></i>
                    <h5 class="mb-3">@Localizer["BookThisRoom"]</h5>
                    <form asp-controller="Reservations" asp-action="Create" method="get">
                        <input type="hidden" name="roomId" value="@Model.Id" />
                        <button type="submit" class="btn btn-hero btn-lg w-100">
                            <i class="fas fa-calendar-check me-2"></i>@Localizer["BookNow"]
                        </button>
                    </form>
                </div>
            </div>
        }
        else if (!Model.IsAvailable)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>@Localizer["RoomCurrentlyBooked"]
            </div>
        }
        else
        {
            <div class="action-card mb-4 text-center">
                <i class="fas fa-sign-in-alt fa-2x text-accent mb-3"></i>
                <h5 class="mb-3">@Localizer["LoginToBook"]</h5>
                <a asp-controller="Account" asp-action="Login" class="btn btn-hero w-100">
                    <i class="fas fa-sign-in-alt me-2"></i>@Localizer["SignIn"]
                </a>
            </div>
        }

        @if (User.IsInRole("Admin"))
        {
            <div class="action-card">
                <h5 class="mb-3"><i class="fas fa-cog me-2 text-accent"></i>@Localizer["AdminActions"]</h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-edit me-2"></i>@Localizer["EditRoom"]
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-2"></i>@Localizer["DeleteRoom"]
                    </a>
                    <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-premium">
                        <i class="fas fa-hotel me-2"></i>@Localizer["ViewHotel"]
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="action-card">
                <div class="d-grid gap-2">
                    <a asp-action="Search" class="btn btn-outline-secondary">
                        <i class="fas fa-search me-2"></i>@Localizer["BackToSearch"]
                    </a>
                    <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-premium">
                        <i class="fas fa-hotel me-2"></i>@Localizer["ViewHotel"]
                    </a>
                </div>
            </div>
        }
    </div>
</div>
