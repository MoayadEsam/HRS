@model IEnumerable<HotelReservation.Core.DTOs.RoomListDto>
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ManageRooms"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-door-open"></i> @Localizer["ManageRooms"]</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> @Localizer["AddNewRoom"]
        </a>
    }
</div>

@if (Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["RoomNumber"]</th>
                            <th>@Localizer["Hotel"]</th>
                            <th>@Localizer["RoomType"]</th>
                            <th>@Localizer["Floor"]</th>
                            <th>@Localizer["Capacity"]</th>
                            <th>@Localizer["PricePerNight"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td><strong>@room.RoomNumber</strong></td>
                                <td>@room.HotelName</td>
                                <td><span class="badge bg-primary">@Localizer[room.TypeName]</span></td>
                                <td>@room.FloorNumber</td>
                                <td>@room.Capacity</td>
                                <td class="text-success"><strong>$@room.PricePerNight</strong></td>
                                <td>
                                    @if (room.IsAvailable)
                                    {
                                        <span class="badge bg-success">@Localizer["Available"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@Localizer["Booked"]</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@room.Id" 
                                           class="btn btn-outline-info" title="@Localizer["Details"]">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@room.Id" 
                                               class="btn btn-outline-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@room.Id" 
                                               class="btn btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> @Localizer["NoRoomsFound"]
    </div>
}
