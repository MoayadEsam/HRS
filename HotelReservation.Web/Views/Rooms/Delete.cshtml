@model HotelReservation.Core.DTOs.RoomDetailsDto
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["DeleteRoom"];
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> @Localizer["DeleteRoom"]</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> @Localizer["ConfirmDeleteRoom"]
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">@Localizer["RoomNumber"]:</dt>
                    <dd class="col-sm-8">@Model.RoomNumber</dd>
                    
                    <dt class="col-sm-4">@Localizer["Hotel"]:</dt>
                    <dd class="col-sm-8">@Model.HotelName</dd>
                    
                    <dt class="col-sm-4">@Localizer["RoomType"]:</dt>
                    <dd class="col-sm-8"><span class="badge bg-primary">@Localizer[Model.TypeName]</span></dd>
                    
                    <dt class="col-sm-4">@Localizer["Price"]:</dt>
                    <dd class="col-sm-8 text-success"><strong>$@Model.PricePerNight /@Localizer["Night"]</strong></dd>
                    
                    <dt class="col-sm-4">@Localizer["Floor"]:</dt>
                    <dd class="col-sm-8">@Model.FloorNumber</dd>
                    
                    <dt class="col-sm-4">@Localizer["Capacity"]:</dt>
                    <dd class="col-sm-8">@Model.Capacity @Localizer["Guests"]</dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-times"></i> @Localizer["Cancel"]
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> @Localizer["ConfirmDelete"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
