@model IEnumerable<HotelReservation.Core.DTOs.HotelListDto>
@{
    ViewData["Title"] = "Our Hotels";
}

<div class="page-header text-center mb-5">
    <h1 class="display-4 mb-3"><i class="fas fa-building me-3"></i>Our Luxury Hotels</h1>
    <p class="lead text-muted">Discover exceptional accommodations around the world</p>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="text-end mb-4">
        <a asp-action="Create" class="btn btn-hero btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Add New Property
        </a>
    </div>
}

<div class="row g-4">
    @foreach (var hotel in Model)
    {
        <div class="col-lg-4 col-md-6">
            <div class="hotel-card">
                <div class="hotel-card-image" style="background: linear-gradient(135deg, rgba(26, 26, 46, 0.7), rgba(22, 33, 62, 0.7)), url('@(string.IsNullOrEmpty(hotel.ImageUrl) ? "https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?w=800&q=80" : hotel.ImageUrl)') center/cover;">
                    <div class="hotel-badge">
                        @for (int i = 0; i < hotel.StarRating; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                    @if (!hotel.IsActive)
                    {
                        <div class="position-absolute top-0 start-0 m-3">
                            <span class="badge bg-danger">Temporarily Closed</span>
                        </div>
                    }
                </div>
                <div class="hotel-card-body">
                    <h5 class="hotel-card-title">@hotel.Name</h5>
                    <p class="hotel-location">
                        <i class="fas fa-map-marker-alt me-2"></i>@hotel.City, @hotel.Country
                    </p>
                    <div class="hotel-info d-flex justify-content-between align-items-center">
                        <span class="room-count"><i class="fas fa-door-open me-2"></i>@hotel.RoomCount Rooms</span>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-premium btn-sm">
                                Details <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <button type="button" class="btn btn-premium btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@hotel.Id"><i class="fas fa-edit me-2"></i>Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@hotel.Id"><i class="fas fa-trash me-2"></i>Delete</a></li>
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-building fa-5x text-muted mb-4"></i>
        <h3 class="text-muted">No Hotels Available</h3>
        <p class="text-muted">Check back soon for new luxury properties</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-hero btn-lg mt-3">
                <i class="fas fa-plus-circle me-2"></i>Add First Hotel
            </a>
        }
    </div>
}
