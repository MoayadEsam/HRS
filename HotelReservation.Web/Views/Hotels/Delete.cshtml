@model HotelReservation.Core.DTOs.HotelDetailsDto
@{
    ViewData["Title"] = "Delete Hotel";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Hotel</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this hotel?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Location:</dt>
                    <dd class="col-sm-8">@Model.City, @Model.Country</dd>
                    
                    <dt class="col-sm-4">Rating:</dt>
                    <dd class="col-sm-8">
                        <span class="text-warning">
                            @for (int i = 0; i < Model.StarRating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Rooms:</dt>
                    <dd class="col-sm-8">@Model.Rooms.Count</dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
