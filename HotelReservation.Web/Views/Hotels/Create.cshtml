@model HotelReservation.Core.DTOs.HotelCreateDto
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["AddNewProperty"];
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card border-0 shadow-premium">
            <div class="card-body p-5">
                <div class="text-center mb-5">
                    <div class="mb-3">
                        <i class="fas fa-building fa-3x text-accent"></i>
                    </div>
                    <h2 class="mb-2">@Localizer["AddNewProperty"]</h2>
                    <p class="text-muted">@Localizer["CreateNewLuxuryHotel"]</p>
                </div>
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                    
                    <h5 class="text-accent mb-3"><i class="fas fa-info-circle me-2"></i>@Localizer["BasicInformation"]</h5>
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <label asp-for="Name" class="form-label fw-semibold">@Localizer["PropertyName"]</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="@Localizer["HotelNamePlaceholder"]" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="StarRating" class="form-label fw-semibold">@Localizer["StarRating"]</label>
                            <select asp-for="StarRating" class="form-select form-select-lg">
                                <option value="1">⭐ 1 @Localizer["Star"]</option>
                                <option value="2">⭐⭐ 2 @Localizer["Stars"]</option>
                                <option value="3" selected>⭐⭐⭐ 3 @Localizer["Stars"]</option>
                                <option value="4">⭐⭐⭐⭐ 4 @Localizer["Stars"]</option>
                                <option value="5">⭐⭐⭐⭐⭐ 5 @Localizer["Stars"]</option>
                            </select>
                            <span asp-validation-for="StarRating" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">@Localizer["Description"]</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="@Localizer["HotelDescriptionPlaceholder"]"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label fw-semibold"><i class="fas fa-images me-2"></i>@Localizer["HotelImages"]</label>
                        
                        <!-- Multiple File Upload -->
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-upload me-1"></i> @Localizer["UploadFromDevice"]</label>
                            <input type="file" name="ImageFiles" class="form-control" accept="image/*" id="imageFilesInput" multiple />
                            <small class="text-muted">@Localizer["SelectMultipleImages"]</small>
                            <div id="imagePreviewGrid" class="row g-2 mt-2"></div>
                        </div>
                        
                        <div class="text-center text-muted my-3">— @Localizer["Or"] —</div>
                        
                        <!-- Sample Image Picker -->
                        <div class="mb-3">
                            <small class="text-muted d-block mb-2"><i class="fas fa-images me-1"></i> @Localizer["SelectSampleImage"]</small>
                            <div class="row g-2">
                                <div class="col-3">
                                    <div class="sample-image-option" onclick="selectSampleImage('https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80')" style="cursor: pointer;">
                                        <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=200&q=60" class="img-fluid rounded" style="height: 80px; width: 100%; object-fit: cover; border: 3px solid transparent; transition: all 0.3s;" alt="Luxury Resort" />
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="sample-image-option" onclick="selectSampleImage('https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=800&q=80')" style="cursor: pointer;">
                                        <img src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=200&q=60" class="img-fluid rounded" style="height: 80px; width: 100%; object-fit: cover; border: 3px solid transparent; transition: all 0.3s;" alt="Beach Hotel" />
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="sample-image-option" onclick="selectSampleImage('https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?w=800&q=80')" style="cursor: pointer;">
                                        <img src="https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?w=200&q=60" class="img-fluid rounded" style="height: 80px; width: 100%; object-fit: cover; border: 3px solid transparent; transition: all 0.3s;" alt="Pool Resort" />
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="sample-image-option" onclick="selectSampleImage('https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?w=800&q=80')" style="cursor: pointer;">
                                        <img src="https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?w=200&q=60" class="img-fluid rounded" style="height: 80px; width: 100%; object-fit: cover; border: 3px solid transparent; transition: all 0.3s;" alt="Grand Hotel" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center text-muted my-3">— @Localizer["Or"] —</div>
                        
                        <!-- URL Input -->
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"><i class="fas fa-link me-1"></i> @Localizer["EnterImageUrl"]</label>
                            <input asp-for="ImageUrl" class="form-control" id="ImageUrl" placeholder="https://example.com/hotel-image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    <h5 class="text-accent mb-3"><i class="fas fa-map-marker-alt me-2"></i>@Localizer["LocationDetails"]</h5>
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Address" class="form-label fw-semibold">@Localizer["StreetAddress"]</label>
                            <input asp-for="Address" class="form-control" placeholder="@Localizer["AddressPlaceholder"]" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="City" class="form-label fw-semibold">@Localizer["City"]</label>
                            <input asp-for="City" class="form-control" placeholder="@Localizer["CityPlaceholder"]" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Country" class="form-label fw-semibold">@Localizer["Country"]</label>
                            <input asp-for="Country" class="form-control" placeholder="@Localizer["CountryPlaceholder"]" />
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="PostalCode" class="form-label fw-semibold">@Localizer["PostalCode"]</label>
                            <input asp-for="PostalCode" class="form-control" placeholder="10001" />
                            <span asp-validation-for="PostalCode" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    <h5 class="text-accent mb-3"><i class="fas fa-phone me-2"></i>@Localizer["ContactInformation"]</h5>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">@Localizer["PhoneNumber"]</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["PhonePlaceholder"]" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-semibold">@Localizer["EmailAddress"]</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="@Localizer["EmailPlaceholder"]" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3 justify-content-end mt-5">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-times me-2"></i>@Localizer["Cancel"]
                        </a>
                        <button type="submit" class="btn btn-hero btn-lg px-5">
                            <i class="fas fa-save me-2"></i>@Localizer["CreateProperty"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Multiple image file preview
        document.getElementById('imageFilesInput').addEventListener('change', function(e) {
            var previewGrid = document.getElementById('imagePreviewGrid');
            previewGrid.innerHTML = '';
            
            var files = e.target.files;
            if (files.length > 0) {
                // Clear URL input and sample selection when files are selected
                document.getElementById('ImageUrl').value = '';
                document.querySelectorAll('.sample-image-option img').forEach(function(img) {
                    img.style.border = '3px solid transparent';
                    img.style.transform = 'scale(1)';
                });
                
                for (var i = 0; i < files.length; i++) {
                    (function(file, index) {
                        var reader = new FileReader();
                        reader.onload = function(e) {
                            var col = document.createElement('div');
                            col.className = 'col-3';
                            col.innerHTML = `
                                <div class="position-relative">
                                    <img src="${e.target.result}" class="img-fluid rounded" style="height: 100px; width: 100%; object-fit: cover; border: 2px solid ${index === 0 ? '#d4af37' : '#ccc'};" />
                                    ${index === 0 ? '<span class="badge bg-warning position-absolute top-0 start-0 m-1">Primary</span>' : ''}
                                </div>
                            `;
                            previewGrid.appendChild(col);
                        };
                        reader.readAsDataURL(file);
                    })(files[i], i);
                }
            }
        });
        
        function selectSampleImage(url) {
            // Set the URL in the input field
            document.getElementById('ImageUrl').value = url;
            
            // Clear file input when sample is selected
            document.getElementById('imageFilesInput').value = '';
            document.getElementById('imagePreviewGrid').innerHTML = '';
            
            // Remove selection from all images
            document.querySelectorAll('.sample-image-option img').forEach(function(img) {
                img.style.border = '3px solid transparent';
                img.style.transform = 'scale(1)';
            });
            
            // Add selection to clicked image
            event.currentTarget.querySelector('img').style.border = '3px solid #d4af37';
            event.currentTarget.querySelector('img').style.transform = 'scale(1.05)';
        }
    </script>
}
