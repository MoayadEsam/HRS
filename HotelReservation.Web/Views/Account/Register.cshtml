@model HotelReservation.Core.DTOs.RegisterDto
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["JoinLuxeStay"];
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-lg-6 col-md-8">
        <div class="card border-0 shadow-premium">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="fas fa-gem fa-3x text-accent"></i>
                    </div>
                    <h2 class="mb-2">@Localizer["JoinLuxeStay"]</h2>
                    <p class="text-muted">@Localizer["CreateAccountAndStart"]</p>
                </div>
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-semibold">@Localizer["FirstName"]</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-muted"></i>
                                </span>
                                <input asp-for="FirstName" class="form-control border-start-0 ps-0" placeholder="John" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-semibold">@Localizer["LastName"]</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-muted"></i>
                                </span>
                                <input asp-for="LastName" class="form-control border-start-0 ps-0" placeholder="Doe" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-semibold">@Localizer["EmailAddress"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-envelope text-muted"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-start-0 ps-0" type="email" placeholder="you@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-semibold">@Localizer["Password"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input asp-for="Password" class="form-control border-start-0 ps-0" type="password" placeholder="Create a strong password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">@Localizer["ConfirmPassword"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" type="password" placeholder="Confirm your password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-hero btn-lg py-3">
                            <i class="fas fa-user-plus me-2"></i>@Localizer["CreateAccount"]
                        </button>
                    </div>
                </form>
            </div>
                <div class="text-center mt-4">
                    <p class="mb-0">@Localizer["AlreadyHaveAccount"] <a asp-action="Login" class="text-decoration-none fw-semibold text-accent">@Localizer["SignInHere"]</a></p>
                </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
