@model HotelReservation.Core.DTOs.StaffRegistrationDto
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["StaffRegistration"];
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="fas fa-user-tie fa-3x mb-3"></i>
                    <h3 class="mb-0">@Localizer["StaffRegistration"]</h3>
                    <p class="mb-0 opacity-75">@Localizer["RegisterAsStaff"]</p>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        @Localizer["StaffRegistrationInfo"]
                    </div>

                    <form asp-action="StaffRegister" method="post">
                        <div class="mb-3">
                            <label asp-for="EmployeeCode" class="form-label">
                                <i class="fas fa-id-badge me-1"></i>@Localizer["EmployeeCode"]
                            </label>
                            <input asp-for="EmployeeCode" class="form-control" placeholder="EMP-0001" />
                            <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                            <small class="text-muted">@Localizer["EmployeeCodeHelp"]</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>@Localizer["WorkEmail"]
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="name@company.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="text-muted">@Localizer["UseWorkEmail"]</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-1"></i>@Localizer["Password"]
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" id="password" />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>@Localizer["ConfirmPassword"]
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="fas fa-user-plus me-2"></i>@Localizer["Register"]
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="mb-2">@Localizer["AlreadyHaveAccount"]</p>
                    <a asp-action="Login" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-sign-in-alt me-1"></i>@Localizer["Login"]
                    </a>
                    <span class="mx-2">|</span>
                    <a asp-action="Register" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-user me-1"></i>@Localizer["GuestRegister"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}
