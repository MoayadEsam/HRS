<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComfortStay Hotels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark premium-nav shadow-lg">
            <div class="container">
                <a class="navbar-brand premium-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gem"></i> ComfortStay
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Hotels" asp-action="Index"><i class="fas fa-building me-1"></i>@Localizer["Hotels"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Rooms" asp-action="Search"><i class="fas fa-search me-1"></i>@Localizer["Search"]</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @if (!User.IsInRole("Admin") && !User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-area="" asp-controller="Reservations" asp-action="MyReservations"><i class="fas fa-calendar-check me-1"></i>@Localizer["MyBookings"]</a>
                                </li>
                            }
                            @if (User.IsInRole("Staff") && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3" asp-area="" asp-controller="StaffProfile" asp-action="Index"><i class="fas fa-id-badge me-1"></i>@Localizer["MyProfile"]</a>
                                </li>
                            }
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Management" asp-action="Index">
                                    <i class="fas fa-crown me-1"></i>@Localizer["Management"]
                                </a>
                            </li>
                        }
                    </ul>
                    <!-- Language Switcher -->
                    <div class="d-flex align-items-center me-3">
                        <form asp-controller="Language" asp-action="SetLanguage" method="post" id="languageForm">
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <select name="culture"
                                    class="form-select form-select-sm bg-dark text-light border-gold"
                                    onchange="document.getElementById('languageForm').submit();"
                                    style="width: 120px;">
                                @{
                                    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
                                    var englishOption = currentCulture == "en-US"
                                        ? "<option value=\"en-US\" selected=\"selected\">🇬🇧 English</option>"
                                        : "<option value=\"en-US\">🇬🇧 English</option>";
                                    var turkishOption = currentCulture == "tr-TR"
                                        ? "<option value=\"tr-TR\" selected=\"selected\">🇹🇷 Türkçe</option>"
                                        : "<option value=\"tr-TR\">🇹🇷 Türkçe</option>";
                                }
                                @Html.Raw(englishOption)
                                @Html.Raw(turkishOption)
                            </select>
                        </form>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="premium-footer mt-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="footer-brand mb-3"><i class="fas fa-gem me-2"></i>ComfortStay</h5>
                    <p class="text-light opacity-75">@Localizer["FooterTagline"]</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3">@Localizer["QuickLinks"]</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="footer-link"><i class="fas fa-chevron-right me-2"></i>@Localizer["Home"]</a></li>
                        <li><a asp-controller="Hotels" asp-action="Index" class="footer-link"><i class="fas fa-chevron-right me-2"></i>@Localizer["Hotels"]</a></li>
                        <li><a asp-controller="Rooms" asp-action="Search" class="footer-link"><i class="fas fa-chevron-right me-2"></i>@Localizer["Search"]</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="footer-link"><i class="fas fa-chevron-right me-2"></i>@Localizer["Privacy"]</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 border-light opacity-25">
            <div class="text-center text-light opacity-75">
                <p class="mb-0">&copy; 2025 ComfortStay Hotels. @Localizer["AllRightsReserved"]</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
