@model IEnumerable<HotelReservation.Core.DTOs.ReservationListDto>
@using HotelReservation.Core.Enums
@{
    ViewData["Title"] = "My Reservations";
}

<h2 class="mb-4"><i class="fas fa-calendar-alt"></i> My Reservations</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var reservation in Model.OrderByDescending(r => r.CreatedAt))
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header 
                        @(reservation.Status == ReservationStatus.Confirmed ? "bg-success text-white" : 
                          reservation.Status == ReservationStatus.Cancelled ? "bg-danger text-white" : 
                          "bg-warning")">
                        <h5 class="mb-0">
                            <span class="badge bg-white text-dark">@reservation.StatusName</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">@reservation.HotelName</h6>
                        <p class="card-text">
                            <strong>Room:</strong> @reservation.RoomNumber<br />
                            <strong>Check-In:</strong> @reservation.CheckInDate.ToString("MMM dd, yyyy")<br />
                            <strong>Check-Out:</strong> @reservation.CheckOutDate.ToString("MMM dd, yyyy")<br />
                            <strong>Guests:</strong> @reservation.NumberOfGuests<br />
                            <strong class="text-success">Total:</strong> <strong class="text-success">$@reservation.TotalPrice</strong>
                        </p>
                        <small class="text-muted">Booked: @reservation.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                            @if (reservation.Status == ReservationStatus.Confirmed && reservation.CheckInDate > DateTime.Now)
                            {
                                <form asp-action="Cancel" asp-route-id="@reservation.Id" method="post" 
                                      onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                    <button type="submit" class="btn btn-danger btn-sm w-100">
                                        <i class="fas fa-times"></i> Cancel Reservation
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You don't have any reservations yet.
        <a asp-controller="Rooms" asp-action="Search" class="alert-link">Search for available rooms</a>.
    </div>
}
