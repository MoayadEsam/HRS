@model HotelReservation.Core.DTOs.ReservationDetailsDto
@using HotelReservation.Core.Enums
@inject IStringLocalizer<HotelReservation.Web.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ReservationDetails"];
    var isOwner = User.Identity?.Name == Model.UserEmail || User.IsInRole("Admin") || User.IsInRole("Staff");
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header 
                @(Model.Status == ReservationStatus.Confirmed ? "bg-success text-white" : 
                  Model.Status == ReservationStatus.Cancelled ? "bg-danger text-white" : 
                  "bg-warning")">
                <h3 class="mb-0">
                    <i class="fas fa-receipt"></i> @Localizer["Reservation"] #@Model.Id
                    <span class="badge bg-white text-dark float-end">@Localizer[Model.StatusName]</span>
                </h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="fas fa-hotel"></i> @Localizer["HotelInformation"]</h5>
                        <p>
                            <strong>@Localizer["Name"]:</strong> @Model.HotelName<br />
                            <strong>@Localizer["Address"]:</strong> @Model.HotelAddress
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-door-open"></i> @Localizer["RoomInformation"]</h5>
                        <p>
                            <strong>@Localizer["RoomNumber"]:</strong> @Model.RoomNumber<br />
                            <strong>@Localizer["RoomType"]:</strong> <span class="badge bg-primary">@Localizer[Model.RoomType]</span><br />
                            <strong>@Localizer["PricePerNight"]:</strong> $@Model.PricePerNight
                        </p>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="fas fa-calendar"></i> @Localizer["ReservationDates"]</h5>
                        <p>
                            <strong>@Localizer["CheckIn"]:</strong> @Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")<br />
                            <strong>@Localizer["CheckOut"]:</strong> @Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")<br />
                            <strong>@Localizer["NumberOfNights"]:</strong> @Model.NumberOfNights<br />
                            <strong>@Localizer["NumberOfGuests"]:</strong> @Model.NumberOfGuests
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-dollar-sign"></i> @Localizer["PriceBreakdown"]</h5>
                        <p>
                            $@Model.PricePerNight Ã— @Model.NumberOfNights @Localizer["Nights"]<br />
                            <strong class="text-success fs-4">@Localizer["Total"]: $@Model.TotalPrice</strong>
                        </p>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                {
                    <div class="mb-4">
                        <h5><i class="fas fa-comment"></i> @Localizer["SpecialRequests"]</h5>
                        <p class="bg-light p-3 rounded">@Model.SpecialRequests</p>
                    </div>
                }
                
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-user"></i> @Localizer["GuestInformation"]</h5>
                        <p>
                            <strong>@Localizer["Name"]:</strong> @Model.UserName<br />
                            <strong>@Localizer["Email"]:</strong> @Model.UserEmail
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-clock"></i> @Localizer["BookingInformation"]</h5>
                        <p>
                            <strong>@Localizer["Created"]:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")<br />
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <strong>@Localizer["LastUpdated"]:</strong> @Model.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">@Localizer["Actions"]</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (isOwner && Model.Status == ReservationStatus.Confirmed && Model.CheckInDate > DateTime.Now)
                    {
                        <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('@Localizer["ConfirmCancelReservation"]');">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-times"></i> @Localizer["CancelReservation"]
                            </button>
                        </form>
                    }
                    
                    <a asp-controller="Export" asp-action="ReservationPdf" asp-route-id="@Model.Id" 
                       class="btn btn-outline-primary" target="_blank">
                        <i class="fas fa-file-pdf"></i> @Localizer["DownloadPdf"]
                    </a>
                    
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> @Localizer["AllReservations"]
                        </a>
                    }
                    else
                    {
                        <a asp-action="MyReservations" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> @Localizer["MyReservations"]
                        </a>
                    }
                    
                    <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-outline-info">
                        <i class="fas fa-hotel"></i> @Localizer["ViewHotel"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
