@model HotelReservation.Core.DTOs.IncomeCreateDto
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["AddIncome"];
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-plus me-2"></i>@Localizer["AddIncome"]
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateIncome" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Source" class="form-label">@Localizer["Source"] <span class="text-danger">*</span></label>
                            <select asp-for="Source" class="form-select">
                                <option value="">@Localizer["SelectSource"]</option>
                                <option value="Reservation">@Localizer["Reservation"]</option>
                                <option value="Restaurant">@Localizer["Restaurant"]</option>
                                <option value="Spa">@Localizer["Spa"]</option>
                                <option value="Event">@Localizer["Event"]</option>
                                <option value="Parking">@Localizer["Parking"]</option>
                                <option value="Laundry">@Localizer["Laundry"]</option>
                                <option value="MiniBar">@Localizer["MiniBar"]</option>
                                <option value="Other">@Localizer["Other"]</option>
                            </select>
                            <span asp-validation-for="Source" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@Localizer["Description"] <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Amount" class="form-label">@Localizer["Amount"] <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IncomeDate" class="form-label">@Localizer["Date"] <span class="text-danger">*</span></label>
                                <input asp-for="IncomeDate" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="IncomeDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PaymentMethod" class="form-label">@Localizer["PaymentMethod"]</label>
                                <select asp-for="PaymentMethod" class="form-select">
                                    <option value="Cash">@Localizer["Cash"]</option>
                                    <option value="CreditCard">@Localizer["CreditCard"]</option>
                                    <option value="DebitCard">@Localizer["DebitCard"]</option>
                                    <option value="BankTransfer">@Localizer["BankTransfer"]</option>
                                    <option value="Check">@Localizer["Check"]</option>
                                </select>
                                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReferenceNumber" class="form-label">@Localizer["ReferenceNumber"]</label>
                                <input asp-for="ReferenceNumber" class="form-control" />
                                <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">@Localizer["Notes"]</label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Income" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
