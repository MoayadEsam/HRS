@model IEnumerable<HotelReservation.Core.DTOs.ExpenseListDto>
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Expenses"];
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-file-invoice-dollar me-2"></i>@Localizer["ExpenseManagement"]
        </h2>
        <div>
            <a asp-action="ExpenseCategories" class="btn btn-outline-primary me-2">
                <i class="fas fa-tags me-2"></i>@Localizer["Categories"]
            </a>
            <a asp-action="CreateExpense" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>@Localizer["AddExpense"]
            </a>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Expenses" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Localizer["Category"]</label>
                    <select name="categoryId" class="form-select">
                        <option value="">@Localizer["AllCategories"]</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var cat in ViewBag.Categories as SelectList)
                            {
                                <option value="@cat.Value" selected="@(cat.Value == ViewBag.SelectedCategoryId?.ToString())">@cat.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["StartDate"]</label>
                    <input type="date" name="startDate" class="form-control" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["EndDate"]</label>
                    <input type="date" name="endDate" class="form-control" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@Localizer["Status"]</label>
                    <select name="isApproved" class="form-select">
                        <option value="">@Localizer["All"]</option>
                        <option value="true" selected="@(ViewBag.SelectedIsApproved == true)">@Localizer["Approved"]</option>
                        <option value="false" selected="@(ViewBag.SelectedIsApproved == false)">@Localizer["Pending"]</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>@Localizer["Filter"]
                    </button>
                    <a asp-action="Expenses" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>@Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["TotalExpenses"]</h6>
                            <h3 class="mb-0">@Model.Sum(e => e.Amount).ToString("C")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-file-invoice-dollar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["Approved"]</h6>
                            <h3 class="mb-0">@Model.Where(e => e.IsApproved).Sum(e => e.Amount).ToString("C")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["PendingApproval"]</h6>
                            <h3 class="mb-0">@Model.Where(e => !e.IsApproved).Sum(e => e.Amount).ToString("C")</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">@Localizer["TotalRecords"]</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="opacity-50">
                            <i class="fas fa-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Expenses Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="expensesTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Category"]</th>
                            <th>@Localizer["Description"]</th>
                            <th>@Localizer["Amount"]</th>
                            <th>@Localizer["Vendor"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["ApprovedBy"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model)
                        {
                            <tr>
                                <td>@expense.ExpenseDate.ToString("d")</td>
                                <td><span class="badge bg-primary">@expense.CategoryName</span></td>
                                <td>@expense.Description</td>
                                <td class="text-danger fw-bold">@expense.Amount.ToString("C")</td>
                                <td>@(expense.Vendor ?? "-")</td>
                                <td>
                                    <span class="badge @(expense.IsApproved ? "bg-success" : "bg-warning")">
                                        @(expense.IsApproved ? Localizer["Approved"] : Localizer["Pending"])
                                    </span>
                                </td>
                                <td>@(expense.ApprovedByName ?? "-")</td>
                                <td>
                                    @if (!expense.IsApproved)
                                    {
                                        <form asp-action="ApproveExpense" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@expense.Id" />
                                            <button type="submit" class="btn btn-success btn-sm" title="@Localizer["Approve"]">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    }
                                    <a asp-action="EditExpense" asp-route-id="@expense.Id" class="btn btn-primary btn-sm" title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@expense.Id" title="@Localizer["Delete"]">
                                        <i class="fas fa-trash"></i>
                                    </button>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@expense.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@Localizer["ConfirmDelete"]</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>@Localizer["DeleteExpenseConfirmation"]</p>
                                                    <p class="text-muted">@expense.Description - @expense.Amount.ToString("C")</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                                                    <form asp-action="DeleteExpense" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@expense.Id" />
                                                        <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#expensesTable').DataTable({
                order: [[0, 'desc']],
                language: {
                    url: '@Url.Content("~/js/datatables/" + System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName + ".json")'
                }
            });
        });
    </script>
}
